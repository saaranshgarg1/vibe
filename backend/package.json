{
  "name": "backend",
  "version": "3.0.0",
  "description": "This is ViBe backend.",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "test:ci": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage  --detectOpenHandles",
    "test:watch:coverage": "jest --watch --coverage --detectOpenHandles",
    "dev": "pnpx ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc && pnpm sentry:sourcemaps",
    "start": "node dist/index.js",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org aditya-bmv --project node-express ./build && sentry-cli sourcemaps upload --org aditya-bmv --project node-express ./build",
    "docs": "typedoc",
    "lint": "pnpx gts lint",
    "clean": "pnpx gts clean",
    "compile": "tsc",
    "fix": "pnpx gts fix",
    "prepare": "pnpm run compile",
    "emulators:auth": "firebase emulators:start --only auth",
    "emulators:functions": "firebase emulators:start --only functions",
    "emulators:all": "firebase emulators:start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/config": "^3.3.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "docusaurus-plugin-typedoc": "^1.2.3",
    "gts": "^6.0.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.28.2",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@sentry/cli": "^2.42.2",
    "@sentry/node": "^9.4.0",
    "@sentry/profiling-node": "^9.4.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.12",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase-admin": "^13.2.0",
    "graphql": "~16.10.0",
    "jsonwebtoken": "^9.0.2",
    "lexorank": "^1.0.5",
    "mongodb": "^6.15.0",
    "multer": "1.4.5-lts.1",
    "nanoid": "^5.1.2",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.11.2",
    "typedi": "^0.10.0"
  }
}
