{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["ESNext"],
        "outDir": "build",
        "rootDir": "src", // Changed back to "." to include scripts directory
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "sourceRoot": "C:\\Users\\Aditya\\OneDrive\\Desktop\\vibe-jest-fix\\vibe\\backend\\src",
        "resolveJsonModule": true,
        "allowArbitraryExtensions": false,
        "incremental": true,
        "paths": {
            "#root/*": ["./*"],
            "#shared/*": ["./shared/*"],
            "#auth/*": ["./modules/auth/*"],
            "#courses/*": ["./modules/courses/*"],
            "#users/*": ["./modules/users/*"],
            "#quizzes/*": ["./modules/quizzes/*"],
            "#settings/*": ["./modules/settings/*"],
        },
        "types": ["node", "express"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "skipLibCheck": true
    },
    "exclude": [
        "build",
        "dist",
        "**/*.spec.ts",
        "**/*.d.ts",
        "vite.config.ts"
    ]
}